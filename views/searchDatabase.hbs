<html>
  <head>
    <meta charset="utf-8">
    <title>Search Result</title>

    <style>
    body {
      color: white;
      background-image: url('http://www.deteched.com/wp-content/uploads/2017/04/VMHZj3.jpg');
      background-size: 1366px 768px;
      background-repeat: repeat;
      background-attachment: fixed;
      margin:50px 0px; padding:0px;
      text-align:center;
      align:center;
    }
    img {
      border: 4px solid #00FFAA;
    }
    table {

      border: 4px solid #00FFAA;
      width:75%;
      background: #FFFFE0;
    }
    td {
      border: 2px solid #00FFAA;
      text-align: center;
      color: #9ACD32;
      font-style: verdana;
    }
    h3 {
      color: 	#D2691E;
      font-style: verdana;
    }

    h2 {
      color: purple;
      font-style: verdana;
    }
    input#rel {
      position: fixed;
      width:95px;
      height:95px;
      bottom:40px;
      right:20px;
      background-color:#0C9;
      color:#FFF;
      border-radius:50px;
      text-align:center;
      box-shadow: 2px 2px 3px #999;
      font-style: verdana;
      font-size: 20px;
    }
    </style>
    <script>
    function quality(){
      if ({{aqi}} <= 50){
       document.getElementById("level").innerHTML = "Good";
       document.getElementById("health").innerHTML = "Air quality is considered satisfactory, and air pollution poses little or no risk";
       document.getElementById("caution").innerHTML = "None";
       document.getElementById("mustsee").style.backgroundColor = "Forestgreen";
       document.getElementById("mustsee").style.color = "white";
     }else if({{aqi}} >= 51 && {{aqi}} <= 100){
       document.getElementById("level").innerHTML = "Moderate";
       document.getElementById("health").innerHTML = "Air quality is acceptable; however, for some pollutants there may be a moderate health concern for a very small number of people who are unusually sensitive to air pollution.";
       document.getElementById("caution").innerHTML = "Active children and adults, and people with respiratory disease, such as asthma, should limit prolonged outdoor exertion.";
       document.getElementById("mustsee").style.backgroundColor = "Gold";
       document.getElementById("mustsee").style.color = "black";
     }else if( {{aqi}} >= 101 && {{aqi}} <= 150){
       document.getElementById("level").innerHTML = "Unhealthy for Sensitive Groups";
       document.getElementById("health").innerHTML = "Members of sensitive groups may experience health effects. The general public is not likely to be affected.";
       document.getElementById("caution").innerHTML = "Active children and adults, and people with respiratory disease, such as asthma, should limit prolonged outdoor exertion.";
       document.getElementById("mustsee").style.backgroundColor = "GoldenRod";
       document.getElementById("mustsee").style.color = "black";
     }else if( {{aqi}} >= 151 && {{aqi}} <= 200){
       document.getElementById("level").innerHTML = "Unhealthy";
       document.getElementById("health").innerHTML = "Everyone may begin to experience health effects; members of sensitive groups may experience more serious health effects";
       document.getElementById("caution").innerHTML = "Active children and adults, and people with respiratory disease, such as asthma, should avoid prolonged outdoor exertion; everyone else, especially children, should limit prolonged outdoor exertion.";
       document.getElementById("mustsee").style.backgroundColor = "Crimson";
       document.getElementById("mustsee").style.color = "white";
     }else if( {{aqi}} >= 201 && {{aqi}} <= 300){
       document.getElementById("level").innerHTML = "Very Unhealthy";
       document.getElementById("health").innerHTML = "Health warnings of emergency conditions. The entire population is more likely to be affected.";
       document.getElementById("caution").innerHTML = "Active children and adults, and people with respiratory disease, such as asthma, should avoid all outdoor exertion; everyone else, especially children, should limit outdoor exertion.";
       document.getElementById("mustsee").style.backgroundColor = "DarkViolet";
       document.getElementById("mustsee").style.color = "white";
     }else if( {{aqi}} > 300){
       document.getElementById("level").innerHTML = "Hazardous";
       document.getElementById("health").innerHTML = "Health alert: everyone may experience more serious health effects";
       document.getElementById("caution").innerHTML = "Everyone should avoid all outdoor exertion";
       document.getElementById("mustsee").style.backgroundColor = "Maroon";
       document.getElementById("mustsee").style.color = "white";
     }

     if(document.getElementById("CO").innerHTML == "%"){
       document.getElementById("CO").innerHTML = "not provided";
     }
     if(document.getElementById("O3").innerHTML == "%"){
       document.getElementById("O3").innerHTML = "not provided";
     }
     if(document.getElementById("SO2").innerHTML == "%"){
       document.getElementById("SO2").innerHTML = "not provided";
     }
     if(document.getElementById("NO2").innerHTML == "%"){
       document.getElementById("NO2").innerHTML = "not provided";
     }
     if(document.getElementById("P").innerHTML == "%"){
       document.getElementById("P").innerHTML = "not provided";
     }
     if(document.getElementById("T").innerHTML == "%"){
       document.getElementById("T").innerHTML = "not provided";
     }
   }
    </script>
  </head>
